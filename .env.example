# Application Environment
APP_ENV=production
APP_NAME=Cabinet360
APP_DEBUG=false
APP_URL=https://cabinet360.onrender.com

# Database Configuration (PlanetScale)
DB_HOST=aws.connect.psdb.cloud
DB_NAME=cabinet360_saas
DB_USER=your-planetscale-username
DB_PASS=pscale_pw_your-planetscale-password

# Security
JWT_SECRET=your-secure-jwt-secret
SESSION_SECURE=true
SESSION_TIMEOUT=1800

# File Upload Configuration
UPLOAD_PATH=/uploads
UPLOAD_MAX_SIZE=5M

# SMTP Configuration (if needed)
SMTP_HOST=smtp.service.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@cabinet360.com
SMTP_FROM_NAME=Cabinet360

# Cache Configuration (if needed)
CACHE_DRIVER=file
CACHE_PREFIX=cabinet360_
CACHE_TTL=3600